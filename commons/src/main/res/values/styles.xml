<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogFragmentStyle">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="DialogTitleBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogTitleTextStyle" parent="SP_FieldValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/SubHeader_TextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="SP_NegativeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/postive_button_border_blue</item>
        <item name="android:textSize">@dimen/Label_TextSize</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="SP_PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textSize">@dimen/Label_TextSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CloseIconStyle">
    <item name="android:layout_width">28dp</item>
    <item name="android:layout_height">28dp</item>
    <item name="android:src">@drawable/ic_close_white_50dp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginStart">10dp</item>
    <item name="contentDescription">@null</item>
    </style>

    <style name="SP_FieldValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textcolor_whole_app_dark</item>
        <item name="android:textSize">@dimen/Label_TextSize</item>
    </style>

    <style name="MyPopupMenu">
        <item name="android:textColor">@color/textcolor_whole_app_dark</item>
        <item name="android:textSize">@dimen/Label_TextSize</item>
    </style>
</resources>